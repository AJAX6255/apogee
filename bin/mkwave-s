#!/bin/csh

set host = `hostname -s`
rm $APOGEE_LOCALDIR/*

# make darks sequentially first
idl -e "makecal,dark=1,vers='$1',telescope='lco25m'" >& log/mkdark-s.$host.log

# make wavecals in parallel
set n = 0
while ( $n < 10 ) 
  idl -e "makecal,multiwave=1,vers='$1',telescope='lco25m'" >& log/mkwave-s"$n".$host.log &
  sleep 20
  @ n = $n + 1
end
wait
echo DONE
